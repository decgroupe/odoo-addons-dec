<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <template id="report_mrporder" inherit_id="mrp.report_mrporder">

        <xpath expr="//div[@t-if='o.workorder_ids']" position="before">
            <div class="row mt32 mb32">
                <div class="col-3">
                    <strong>Digits:</strong><br/>
                    <span t-field="o.identifier"/>
                </div>
                <div class="col-3">
                    <strong>Checksum:</strong><br/>
                    <span t-field="o.identifier_checksum"/>
                </div>
            </div>
        </xpath>

    </template>

</odoo>
