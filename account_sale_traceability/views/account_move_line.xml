<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record model="ir.ui.view" id="invoice_line_form_view">
        <field name="name">account.move.line.form@account_traceability</field>
        <field name="model">account.move.line</field>
        <field name="inherit_id" ref="account.view_move_line_form" />
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page
                    string="Sale Lines"
                    name="sale_lines"
                    groups="sales_team.group_sale_salesman"
                >
                    <field name="date" invisible="1" />
                    <field name="sale_line_ids" />
                </page>
            </xpath>
        </field>
    </record>

    <record model="ir.ui.view" id="invoice_line_tree_view">
        <field name="name">account.move.line.tree@account_traceability</field>
        <field name="model">account.move.line</field>
        <field name="inherit_id" ref="account.view_move_line_tree" />
        <field name="arch" type="xml">
            <field name="name" position="before">
                <field name="product_id" />
            </field>
        </field>
    </record>

    <record model="ir.ui.view" id="invoice_line_tree_filter_view">
        <field name="name">account.move.line.select@account_traceability</field>
        <field name="model">account.move.line</field>
        <field name="inherit_id" ref="account.view_account_move_line_filter" />
        <field name="arch" type="xml">
            <field name="name" position="after">
                <field name="product_id" />
                <field name="invoice_origin"/>
                <filter
                    string="Not attached"
                    name="filter_not_attached"
                    domain="[('purchase_line_id', '=', False), ('sale_line_ids', '=', False)]"
                />
                <!-- NOTE: [MIG] 14.0: `filter_customer_invoice` already implemented by `sales` filter -->
                <!-- NOTE: [MIG] 14.0: `filter_supplier_invoice` already implemented by `purchases` filter -->
            </field>
            <filter name="group_by_partner" position="before">
                <filter
                    string="Product"
                    name="group_by_product_id"
                    domain="[]"
                    context="{'group_by':'product_id'}"
                />
            </filter>
        </field>
    </record>

</odoo>
