<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <!-- Mass Edit Partner Note -->
    <record id="mass_editing_partner_note" model="ir.actions.server">
        <field name="state">mass_edit</field>
        <field name="name">Edit Note (Mass)</field>
        <field name="model_id" ref="base.model_res_partner" />
    </record>
    <record id="mass_editing_partner_note_line_1" model="mass.editing.line">
        <field name="server_action_id" ref="mass_editing_partner_note" />
        <field name="field_id" ref="base.field_res_partner__comment" />
    </record>

    <!-- Add context actions -->
    <function model="ir.actions.server" name="create_action">
        <value eval="[ref('mass_editing_partner_note')]" />
    </function>

</odoo>
