<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record model="ir.ui.view" id="crm_case_oppor_tree_view">
        <field name="name">crm.lead.tree.opportunity@crm_lead_partner_academy</field>
        <field name="model">crm.lead</field>
        <field
            name="inherit_id"
            ref="crm_lead_partner_location.crm_case_oppor_tree_view"
        />
        <field name="priority" eval="15" />
        <field name="arch" type="xml">
            <xpath expr="//tree/field[@name='partner_shipping_id']" position="after">
                <field
                    name="partner_shipping_academy_id"
                    string="Academy"
                    optional="hide"
                />
            </xpath>
        </field>
    </record>

    <record model="ir.ui.view" id="crm_lead_view_form">
        <field name="name">crm.lead.form.opportunity@crm_lead_partner_academy</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_lead_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="partner_shipping_academy_id" string="Academy" />
            </xpath>
        </field>
    </record>

    <record model="ir.ui.view" id="crm_case_opportunities_filter_view">
        <field name="name">crm.lead.search.opportunity@crm_lead_partner_academy</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.view_crm_case_opportunities_filter" />
        <field name="arch" type="xml">
            <field name="partner_shipping_id" position="after">
                <field name="partner_shipping_academy_id" />
            </field>
            <filter name="country" position="after">
                <filter
                    string="Academy"
                    name="group_partner_shipping_academy"
                    domain="[]"
                    context="{'group_by':'partner_shipping_academy_id'}"
                />
            </filter>
        </field>
    </record>

</odoo>
