<?xml version="1.0" ?>
<odoo>

    <record model="ir.ui.view" id="mail_activity_view_tree">
        <field name="name">mail.activity.view.tree@mail_activity_project</field>
        <field name="model">mail.activity</field>
        <field name="inherit_id" ref="mail.mail_activity_view_tree" />
        <field name="arch" type="xml">
            <field name="activity_type_id" position="before">
                <field name="project_id" readonly="True" />
            </field>
        </field>
    </record>

    <record model="ir.ui.view" id="mail_activity_view_form_board">
        <field name="name">mail.activity.view.form@mail_activity_project</field>
        <field name="model">mail.activity</field>
        <field
            name="inherit_id"
            ref="mail_activity_board.mail_activity_view_form_board"
        />
        <field name="arch" type="xml">
            <field name="activity_type_id" position="before">
                <field name="project_id" readonly="True" />
            </field>
        </field>
    </record>

    <record model="ir.ui.view" id="mail_activity_view_kanban">
        <field
            name="name"
        >mail.activity.boards.view.kanban@mail_activity_project</field>
        <field name="model">mail.activity</field>
        <field name="inherit_id" ref="mail_activity_board.mail_activity_view_kanban" />
        <field name="arch" type="xml">
            <strong class="o_kanban_record_title" position="inside">
                <field name="project_id" />
            </strong>
        </field>
    </record>

    <record model="ir.ui.view" id="mail_activity_view_search">
        <field
            name="name"
        >mail.activity.boards.view.search@mail_activity_project</field>
        <field name="model">mail.activity</field>
        <field name="inherit_id" ref="mail_activity_board.mail_activity_view_search" />
        <field name="arch" type="xml">
            <xpath expr='//field[@name="res_model_id"]' position='before'>
                <field name="project_id" />
            </xpath>
            <xpath expr='//filter[@name="activittype"]' position='after'>
                <filter
                    string="Project/Contract"
                    name="groupby_project_id"
                    context="{'group_by': 'project_id'}"
                />
            </xpath>
        </field>
    </record>

</odoo>
