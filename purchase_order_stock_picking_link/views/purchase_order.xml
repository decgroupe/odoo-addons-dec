<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record model="ir.ui.view" id="purchase_order_view_form_inherit">
        <field
            name="name"
        >purchase.order.form.inherit@purchase_order_stock_picking_link</field>
        <field name="model">purchase.order</field>
        <field
            name="inherit_id"
            ref="purchase_stock.purchase_order_view_form_inherit"
        />
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button
                    class="oe_stat_button"
                    name="action_view_outgoing_picking"
                    string=""
                    help="Show outgoing pickings waiting for this order"
                    type="object"
                    icon="fa-truck"
                    attrs="{'invisible':[('outgoing_picking_ids', '=', [])]}"
                >
                    <field
                        name="outgoing_picking_count"
                        widget="statinfo"
                        string="Delivery"
                        help="Outgoing Shipments"
                    />
                    <field name="outgoing_picking_ids" invisible="1" />
                </button>
            </xpath>
        </field>
    </record>

</odoo>
