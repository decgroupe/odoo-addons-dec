<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <template
        id="software_license_pass.mail_notification_layout"
        inherit_id="mail_qweb.message_notification_email"
        primary="True"
    >
        <xpath expr="//t[@t-set='content_message']" position="inside">
            <div name="extra" />
        </xpath>
    </template>

    <template id="software_license_pass.view_email_template_pass_send">
        <p name="contact" t-if="object.partner_contact_id.name">Dear <t
                t-esc="object.partner_contact_id.name or ''"
            />
        </p>
        <p>
            Here is your <t
                t-if="model_description"
                t-esc="model_description"
            /> <strong t-esc="object.name" />
            <t t-if="object.origin">
                (with reference: <t t-esc="object.origin" />)
            </t> from <t t-esc="object.company_id.name" />.
        </p>

        <p>
            This pass allows you to activate
            <t t-if="object.max_allowed_hardware > 0">up to <t
                    t-esc="object.max_allowed_hardware"
                />
            </t>
            <t t-else="">unlimited</t> device(s) and to access following applications:
            <ul>
                <li t-foreach="object.license_ids" t-as="license_id">
                    <span t-esc="license_id.application_id.name" />
                    <span
                        t-if="license_id.application_id.product_name"
                        t-esc="license_id.application_id.product_name"
                    />
                </li>
            </ul>
            <t t-if="object.expiration_date">
                <i>This access will be valid until <t
                        t-esc="format_date(object.expiration_date)"
                    />.</i>
            </t>
            <p>
                <b>
                    Please read carefully the accompanying documentation which explains
                    how to manage your activations and where you can download your
                    digital content.
                </b>
            </p>
        </p>

        <p class="content_message_bottom">
            Do not hesitate to contact us if you have any question (you can reply to this email).
        </p>
    </template>

</odoo>
