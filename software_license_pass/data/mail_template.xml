<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="email_template_pass_send" model="mail.template">
        <field name="name">Application Pass: Send by email</field>
        <field
            name="model_id"
            ref="software_license_pass.model_software_license_pass"
        />
        <field name="email_from">${object.user_id.email_formatted |safe}</field>
        <field name="partner_to">${object.partner_contact_id.id}</field>
        <field name="lang">${object.partner_id.lang}</field>
        <field name="auto_delete" eval="True" />
        <field
            name="subject"
        >${object.company_id.name} ${ctx['model_description']} (Ref ${object.name or 'n/a' })</field>
        <field name="body_type">qweb</field>
        <field name="body_view_id" ref="view_email_template_pass_send" />
    </record>

</odoo>
