<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record model="ir.ui.view" id="software_license_hardware_group_tree_view">
        <field
            name="name"
        >software.license.hardware.group.tree@software_license_pass</field>
        <field name="model">software.license.hardware.group</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="device_fqdn" />
                <field name="last_validation_date" />
                <field name="hardware_count" string="Count" />
                <button
                    name="action_deactivate"
                    title="Deactivate this identifier immediatly"
                    type="object"
                    confirm="Are you sure you want deactivate this hardware identifier?"
                    icon="fa-trash"
                />
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="software_license_hardware_group_form_view">
        <field
            name="name"
        >software.license.hardware.group.form@software_license_pass</field>
        <field name="model">software.license.hardware.group</field>
        <field name="arch" type="xml">
            <form string="Hardware Group">
                <header>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                    </div>
                    <group name="title">
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only" />
                            <h1>
                                <field name="name" />
                            </h1>
                        </div>
                    </group>
                    <group name="main">
                        <group name="primary">
                            <field name="device_fqdn" />
                        </group>
                        <group name="secondary">
                            <field name="pass_id" />
                        </group>
                    </group>
                    <group name="hardware">
                        <field name="hardware_ids" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="software_license_hardware_group_search_view">
        <field
            name="name"
        >software.license.hardware.group.search@software_license_pass</field>
        <field name="model">software.license.hardware.group</field>
        <field name="arch" type="xml">
            <search string="Hardware Groups">
                <field
                    string="Identifier or FQDN"
                    name="name"
                    filter_domain="[
                        ('|'),
                        ('name', 'ilike', self),
                        ('device_fqdn', 'ilike', self)
                    ]"
                />
            </search>
        </field>
    </record>

    <record
        model="ir.actions.act_window"
        id="act_window_software_license_hardware_group"
    >
        <field name="name">Hardware Groups</field>
        <field name="res_model">software.license.hardware.group</field>
        <field name="view_mode">form,tree</field>
        <field name="view_id" ref="software_license_hardware_group_tree_view" />
        <field
            name="search_view_id"
            ref="software_license_hardware_group_search_view"
        />
    </record>

    <record
        model="ir.actions.act_window.view"
        id="act_window_view_software_license_hardware_group_tree"
    >
        <field name="sequence" eval="1" />
        <field name="view_mode">tree</field>
        <field name="view_id" ref="software_license_hardware_group_tree_view" />
        <field name="act_window_id" ref="act_window_software_license_hardware_group" />
    </record>

    <record
        model="ir.actions.act_window.view"
        id="act_window_view_software_license_hardware_group_form"
    >
        <field name="sequence" eval="2" />
        <field name="view_mode">form</field>
        <field name="view_id" ref="software_license_hardware_group_form_view" />
        <field name="act_window_id" ref="act_window_software_license_hardware_group" />
    </record>

</odoo>
