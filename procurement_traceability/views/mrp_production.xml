<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record model="ir.ui.view" id="mrp_production_tree_view">
        <field name="name">mrp.production.tree@procurement_traceability</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_tree_view" />
        <field name="arch" type="xml">
            <field name="origin" position="after">
                <field name="procurement_group_id" />
            </field>
        </field>
    </record>

    <record model="ir.ui.view" id="mrp_production_form_view">
        <field name="name">mrp.production.form@procurement_traceability</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_form_view" />
        <field name="arch" type="xml">
            <xpath
                expr="//page[@name='miscellaneous']//field[@name='origin']"
                position="after"
            >
                <field name="procurement_group_id" />
            </xpath>
        </field>
    </record>

</odoo>
