<?xml version='1.0' encoding='utf-8' ?>
<odoo>

    <record model="ir.ui.view" id="ticket_category_form_view">
        <field name="name">helpdesk.ticket.category.view.form@website_contact</field>
        <field name="model">helpdesk.ticket.category</field>
        <field name="inherit_id" ref="helpdesk_mgmt.view_helpdesk_category_form" />
        <field name="arch" type="xml">
            <group name="main" position="inside">
                <field name="sequence" />
                <field name="public_filter" />
            </group>
        </field>
    </record>

    <record model="ir.ui.view" id="ticket_category_tree_view">
        <field name="name">helpdesk.ticket.category.view.tree@website_contact</field>
        <field name="model">helpdesk.ticket.category</field>
        <field name="inherit_id" ref="helpdesk_mgmt.view_helpdesk_category_tree" />
        <field name="arch" type="xml">
            <tree position="inside">
                <field name="sequence" />
            </tree>
        </field>
    </record>

</odoo>
