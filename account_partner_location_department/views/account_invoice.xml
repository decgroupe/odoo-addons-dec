<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record model="ir.ui.view" id="account_invoice_filter_view">
        <field
            name="name"
        >account.invoice.select@account_partner_location_department</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account_partner_location.account_invoice_filter_view" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_zip_id']" position="after">
                <field name="partner_department_id" />
                <field name="partner_state_id" />
            </xpath>
            <xpath expr="//filter[@name='group_partner_zip']" position="after">
                <filter
                    string="Department"
                    name="group_partner_department"
                    context="{'group_by':'partner_department_id'}"
                />
                <filter
                    string="State"
                    name="group_partner_state"
                    context="{'group_by':'partner_state_id'}"
                />
            </xpath>
        </field>
    </record>

</odoo>
