<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record model="ir.ui.view" id="product_timesheet_form_view">
        <field
            name="name"
        >product.template.timesheet.form@sale_software_license_pass</field>
        <field name="model">product.template</field>
        <field
            name="inherit_id"
            ref="sale_project.product_template_form_view_invoice_policy_inherit_sale_project"
        />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='project_template_id']" position="after">
                <field
                    name="license_pack_id"
                    attrs="{
                    'invisible': [('service_tracking', '!=', 'create_application_pass')],
                    'required': [('service_tracking', '=', 'create_application_pass')],
                }"
                />
            </xpath>
        </field>
    </record>

</odoo>
