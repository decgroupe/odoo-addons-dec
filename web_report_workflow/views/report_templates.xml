<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <template id="report_assets_common" inherit_id="web.report_assets_common">
        <xpath expr="link[last()]" position="after">
            <link
                rel="stylesheet"
                type="text/scss"
                href="/web_report_workflow/static/src/css/style.scss"
            />
        </xpath>
    </template>

    <template id="external_layout_standard" inherit_id="web.external_layout_standard">

        <xpath expr="//div[@name='company_address']" position="replace">
            <div class="company_header col-6" name="company_address">
                <div
                    class="company_address"
                    t-field="company.partner_id"
                    t-options='{"widget": "contact", "fields": ["address"], "no_marker": false, "no_tag_br": false}'
                />
                <div
                    t-field="company.partner_id"
                    t-options='{"widget": "contact", "fields": ["phone", "mobile", "email"], "no_marker": false}'
                />
            </div>
        </xpath>

        <xpath expr="//div[@class='header']" position="inside">
            <div class="clearfix mb8" />
        </xpath>

        <xpath expr="//div[@class='footer o_standard_footer']" position="replace">
            <div class="footer o_standard_footer">
                <div class="text-center" style="border-top: 1px solid black;">
                    <ul class="list-inline mb4">
                        <li class="list-inline-item" t-if="company.report_footer"><span
                                t-field="company.report_footer"
                            /></li>
                        <li class="list-inline-item" t-if="company.vat">| <t
                                t-esc="(company.country_id.vat_label or 'Tax ID').replace(' ','\N{NO-BREAK SPACE}')"
                            /> <span t-field="company.vat" /></li>
                        <li class="list-inline-item" t-if="company.siret">| SIRET <span
                                t-field="company.siret"
                            /></li>
                        <li class="list-inline-item" t-if="company.ape">| APE <span
                                t-field="company.ape"
                            /></li>
                        <li
                            class="list-inline-item"
                            t-if="company.report_bank_footer"
                        ><span t-field="company.report_bank_footer" /></li>
                    </ul>
                    <div t-if="report_type == 'pdf'" class="text-muted">
                        Page: <span class="page" /> / <span class="topage" />
                    </div>
                </div>
            </div>
        </xpath>

    </template>

</odoo>
