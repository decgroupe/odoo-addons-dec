<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record model="ir.ui.view" id="software_license_tree_view">
        <field name="name">software.license.tree@software_license_mrp</field>
        <field name="model">software.license</field>
        <field name="inherit_id" ref="software_license.software_license_tree_view" />
        <field name="arch" type="xml">
            <field name="product_id" position="after">
                <field name="production_id" optional="hide"/>
            </field>
        </field>
    </record>

    <record model="ir.ui.view" id="software_license_form_view">
        <field name="name">software.license.form@software_license_mrp</field>
        <field name="model">software.license</field>
        <field name="inherit_id" ref="software_license.software_license_form_view" />
        <field name="arch" type="xml">
            <field name="product_id" position="before">
                <field name="production_id" />
            </field>
        </field>
    </record>

    <record model="ir.ui.view" id="software_license_search_view">
        <field name="name">software.license.search@software_license_mrp</field>
        <field name="model">software.license</field>
        <field name="inherit_id" ref="software_license.software_license_search_view" />
        <field name="arch" type="xml">
            <filter name="groupby_product_id" position="after">
                <filter
                    string="Production"
                    name="groupby_production_id"
                    context="{'group_by':'production_id'}"
                />
            </filter>
        </field>
    </record>

</odoo>
