<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record model="ir.ui.view" id="xml_data_tree_view">
        <field name="name">xml.data.tree@xml_data</field>
        <field name="model">xml.data</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="module" />
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="xml_data_form_view">
        <field name="name">xml.data.form@xml_data</field>
        <field name="model">xml.data</field>
        <field name="arch" type="xml">
            <form string="XML Data">
                <header>
                    <button
                        string="Import (Init)"
                        name="action_import_init"
                        type="object"
                        class="oe_highlight"
                    />
                    <button
                        string="Import (Update)"
                        name="action_import_update"
                        type="object"
                        class="oe_highlight"
                    />
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <field name="active" invisible="1" />
                        <widget
                            name="web_ribbon"
                            title="Archived"
                            bg_color="bg-danger"
                            attrs="{'invisible': [('active', '=', True)]}"
                        />
                    </div>
                    <div name="title" class="oe_title">
                        <label for="name" class="oe_edit_only" string="Name" />
                        <h1>
                            <field name="name" />
                        </h1>
                    </div>
                    <group name="main">
                        <field name="module" />
                        <field
                            name="content"
                            widget="ace"
                            options="{'mode': 'xml'}"
                            required="1"
                        />
                        <field name="note" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="xml_data_search_view">
        <field name="name">xml.data.search@xml_data</field>
        <field name="model">xml.data</field>
        <field name="arch" type="xml">
            <search string="XML Datas">
                <field name="name" />
                <field name="module" />
                <field name="content" />
            </search>
        </field>
    </record>

    <record model="ir.actions.act_window" id="act_window_xml_data">
        <field name="name">XMLs</field>
        <field name="res_model">xml.data</field>
        <field name="view_mode">form,tree</field>
        <field name="view_id" ref="xml_data_tree_view" />
        <field name="search_view_id" ref="xml_data_search_view" />
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>

    <record model="ir.actions.act_window.view" id="act_window_view_xml_data_tree">
        <field name="sequence" eval="1" />
        <field name="view_mode">tree</field>
        <field name="view_id" ref="xml_data_tree_view" />
        <field name="act_window_id" ref="act_window_xml_data" />
    </record>

    <record model="ir.actions.act_window.view" id="act_window_view_xml_data_form">
        <field name="sequence" eval="2" />
        <field name="view_mode">form</field>
        <field name="view_id" ref="xml_data_form_view" />
        <field name="act_window_id" ref="act_window_xml_data" />
    </record>

</odoo>
