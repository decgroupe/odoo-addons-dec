<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record model="ir.ui.view" id="view_product_template_purchase_buttons_from">
        <field
            name="name"
        >product.template.purchase.button.inherit@product_form_quotation_link</field>
        <field name="model">product.template</field>
        <field
            name="inherit_id"
            ref="purchase.view_product_template_purchase_buttons_from"
        />
        <field name="arch" type="xml">
            <button
                name="%(product_form_purchase_link.action_purchase_line_product_tree)d"
                position="before"
            >
                <button
                    class="oe_stat_button"
                    name="%(product_form_quotation_link.action_purchase_line_product_tree)d"
                    type="action"
                    solid_icon="fa-list-alt"
                >
                    <field
                        string="Purchase Quotations"
                        name="qty_in_purchase_quotation"
                        widget="statinfo"
                    />
                </button>
            </button>
        </field>
    </record>

    <record model="ir.ui.view" id="product_template_form_view">
        <field name="name">product.template.form@product_form_quotation_link</field>
        <field name="model">product.template</field>
        <field
            name="inherit_id"
            ref="product_form_sale_link.product_template_form_view"
        />
        <field name="groups_id" eval="[(4, ref('sales_team.group_sale_salesman'))]" />
        <field name="arch" type="xml">
            <button
                name="%(product_form_sale_link.action_product_template_sale_list)d"
                position="before"
            >
                <button
                    class="oe_stat_button"
                    name="%(product_form_quotation_link.action_product_template_sale_quotation_list)d"
                    type="action"
                    solid_icon="fa-list-alt"
                >
                    <field
                        string="Sale Quotations"
                        name="qty_in_sale_quotation"
                        widget="statinfo"
                    />
                </button>
            </button>
        </field>
    </record>

</odoo>
