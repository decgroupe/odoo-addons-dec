                color: #155724;
                background-color: #d4edda;
                border-color: #c3e6cb;
            }

            .alert-success hr {
                border-top-color: #b1dfbb;
            }

            .alert-success .alert-link {
                color: #0b2e13;
            }

            .alert-info {
                color: #0c5460;
                background-color: #d1ecf1;
                border-color: #bee5eb;
            }

            .alert-info hr {
                border-top-color: #abdde5;
            }

            .alert-info .alert-link {
                color: #062c33;
            }

            .alert-warning {
                color: #856404;
                background-color: #fff3cd;
                border-color: #ffeeba;
            }

            .alert-warning hr {
                border-top-color: #ffe8a1;
            }

