    <!-- Override Odoo's default mail notification layout -->
    <template id="mail_qweb.message_notification_email">
        <t t-call="mail_qweb.view_email_template_notification">
            <t t-set="env" t-value="message.env" />
            <t t-set="content_subject">
                <t t-if="message.subject">
                    <t t-raw="message.subject" />
                </t>
                <t t-else="">
                    <t t-raw="record.name" />
                </t>
            </t>
            <t t-set="header_message">
                <div
                    t-if="has_button_access"
                    itemscope="itemscope"
                    itemtype="http://schema.org/EmailMessage"
                >
                    <div
                        itemprop="potentialAction"
                        itemscope="itemscope"
                        itemtype="http://schema.org/ViewAction"
                    >
                        <link itemprop="target" t-att-href="button_access['url']" />
                        <link itemprop="url" t-att-href="button_access['url']" />
                        <meta itemprop="name" t-att-content="button_access['title']" />
                    </div>
                </div>
            </t>
            <t t-set="content_warning" t-if="subtype.internal">
                <strong>Internal communication :</strong>
                Replying will post an internal note. Followers won't receive any email notification.
            </t>
            <t
                t-set="content_message_action"
                t-if="(has_button_access or len(actions) &gt; 0)"
            >
                <div summary="o_mail_notification">
                    <t t-if="has_button_access">
                        <a t-att-href="button_access['url']">
                            <t t-esc="button_access['title']" />
                        </a>
                    </t>
                    <t t-if="actions">
                        <t t-foreach="actions" t-as="action">
                            |
                            <a t-att-href="action['url']">
                                <t t-esc="action['title']" />
                            </a>
                        </t>
                    </t>
                </div>
            </t>
            <t t-set="content_message">
                <div t-raw="message.body" />
                <ul t-if="tracking_values">
                    <t t-foreach="tracking_values" t-as="tracking">
                        <li><t t-esc="tracking[0]" />: <t
                                t-esc="tracking[1]"
                            /> -&gt; <t t-esc="tracking[2]" /></li>
                    </t>
                </ul>
            </t>

            <t
                t-set="content_message_bottom_cc"
                t-if="notification_group_name and notification_group_name not in ('customer','portal','portal_customer')"
            >
                <t t-call="mail_qweb.view_email_template_part_also_notified" />
            </t>

            <t t-set="content_message_signature" t-if="not is_html_empty(signature)">
                <t t-raw="signature" />
            </t>
        </t>
    </template>
    <template id="mail.message_notification_email">
        <t t-call="mail_qweb.message_notification_email"/>
    </template>

    <!-- Override Odoo's default mail notification border layout -->
    <!-- USELESS: Not used anywhere -->
    <template id="mail_qweb.mail_notification_borders">
    </template>
    <template id="mail.mail_notification_borders">
        <t t-call="mail_qweb.mail_notification_borders"/>
    </template>

    <!-- Custom empty layout: To replace fallback layout.
    When a notification is set using `_notify_record_by_email`, the `template_xmlid`
    is set from `email_layout_xmlid` or fallback to `mail.message_notification_email`.
    -->
    <template id="mail_qweb.mail_notification_empty">
        <t t-raw="message.body" />
    </template>

    <!-- Override Odoo's default mail notification light layout -->
    <template id="mail_qweb.mail_notification_light">
        <t t-call="mail_qweb.view_email_template_notification">
            <t t-set="env" t-value="message.env" />
            <t t-set="content_subject">
                <t t-raw="message.subject" />
            </t>
            <t t-set="content_message">
                <t t-raw="message.body" />
            </t>
            <t
                t-set="content_message_bottom_cc"
                t-if="notification_group_name and notification_group_name not in ('customer','portal','portal_customer')"
            >
                <t t-call="mail_qweb.view_email_template_part_also_notified" />
            </t>
            <!-- Contrary to original light template, signature is also added -->
            <t t-set="content_message_signature" t-if="not is_html_empty(signature)">
                <t t-raw="signature" />
            </t>
        </t>
    </template>
    <template id="mail.mail_notification_light">
        <t t-call="mail_qweb.mail_notification_light"/>
    </template>

    <!-- Override Odoo's « Pay Now » mail notification layout -->
    <template id="mail_qweb.mail_notification_paynow" inherit_id="mail.mail_notification_paynow">
        <xpath expr="//t" position="replace">

            <t t-call="mail_qweb.view_email_template_notification">
                <!-- Copy/paste variables init from original view -->
                <t
                    t-set="access_action"
                    t-value="record.with_context(force_website=True).get_access_action()"
                />
                <t
                    t-set="is_online"
                    t-value="access_action and access_action['type'] == 'ir.actions.act_url'"
                />
                <t t-set="base_url" t-value="record.get_base_url()" />
                <t
                    t-set="share_url"
                    t-value="record._get_share_url(redirect=True, signup_partner=notification_is_customer, share_token=notification_is_customer)"
                />
                <t
                    t-set="access_url"
                    t-value="is_online and share_url and base_url + share_url or ''"
                />
                <t t-set="access_name">View <t
                        t-esc="model_description or 'document'"
                    /></t>

                <t t-set="env" t-value="message.env" />
                <t t-set="content_subject">
                    <t t-raw="message.subject" />
                </t>
                <t t-set="content_message">
                    <t t-raw="message.body" />
                </t>
                <t t-set="content_message_action">
                    <a t-att-href="access_url">
                        <t t-esc="access_name" />
                    </a>
                </t>
                <t
                    t-set="content_message_bottom_cc"
                    t-if="notification_group_name and notification_group_name not in ('customer','portal','portal_customer')"
                >
                    <t t-call="mail_qweb.view_email_template_part_also_notified" />
                </t>

                <t t-set="user_signature" t-value="record.user_id or env.user" />
                <t
                    t-set="content_message_signature"
                    t-if="user_signature and user_signature.signature"
                >
                    <t t-raw="user_signature.signature" />
                </t>
            </t>
        </xpath>
    </template>

    <!-- Override Odoo's « You have been assigned To ... » mail notification content -->
    <template id="mail_qweb.message_user_assigned">
        <p>
            <t t-esc="object.user_id.name" />,<br />
            <span>
                You have been assigned to <b t-esc="model_description or 'document'" />:
                <br />
                <small>« <t t-esc="object.display_name" /> »</small>.
            </span>
        </p>
        <div id="content_message_action">
            <a
                t-att-href="access_link"
                t-att-data-oe-model="object._name"
                t-att-data-oe-id="object.id"
            >View <t t-esc="model_description or 'document'" />
            </a>
        </div>
    </template>
    <template id="mail.message_user_assigned">
        <t t-call="mail_qweb.message_user_assigned"/>
    </template>

    <!-- Override Odoo's « Activity has been assigned to you ... » mail notification content -->
    <template id="mail_qweb.message_activity_assigned">
        <div>
            <p>
                <span t-field="activity.create_uid.name" /> assigned you an activity:
            </p>
            <table class="content_table">
                <tr t-if="activity.activity_type_id">
                    <td class="row_header">
                        Type
                    </td>
                    <td>
                        <span t-field="activity.activity_type_id.name" />
                    </td>
                </tr>
                <tr t-if="activity.res_name">
                    <td class="row_header">
                        On
                    </td>
                    <td>
                        <span t-field="activity.res_name" />
                    </td>
                </tr>
                <tr t-if="activity.summary">
                    <td class="row_header">
                        Summary
                    </td>
                    <td>
                        <span t-field="activity.summary" />
                    </td>
                </tr>
                <tr t-if="activity.date_deadline">
                    <td class="row_header">
                        To close for
                    </td>
                    <td>
                        <span t-field="activity.date_deadline" />
                    </td>
                </tr>
                <tr
                    t-if="activity.note and activity.note != '&lt;p&gt;&lt;br&gt;&lt;/p&gt;'"
                >
                    <td class="row_header">
                        Note
                    </td>
                    <td>
                        <span t-field="activity.note" />
                    </td>
                </tr>
            </table>
            <div id="content_message_action">
                <a
                    t-att-href="access_link"
                    t-att-data-oe-model="activity.res_model"
                    t-att-data-oe-id="activity.res_id"
                >View <t t-esc="model_description or 'document'" />
                </a>
            </div>
        </div>
    </template>
    <template id="mail.message_activity_assigned">
        <t t-call="mail_qweb.message_activity_assigned"/>
    </template>

    <template id="mail_qweb.message_activity_done">

        <div>
            <p>
                Activity done: <span
                    t-attf-class="fa #{activity.activity_type_id.icon} fa-fw"
                /><span t-field="activity.activity_type_id.name" />
                <t t-if="display_assignee"><small> (originally assigned to <span
                            t-field="activity.user_id.name"
                        />)</small></t>
            </p>

            <div t-if="feedback">
                <t t-foreach="feedback.split('\n')" t-as="feedback_line">
                    <t t-esc="feedback_line" />
                    <br t-if="not feedback_line_last" />
                </t>
            </div>

            <table class="content_table">
                <tr t-if="activity.activity_type_id">
                    <td class="row_header">
                        Type
                    </td>
                    <td>
                        <span t-field="activity.activity_type_id.name" />
                    </td>
                </tr>
                <tr t-if="display_assignee">
                    <td class="row_header">
                        Assigned to
                    </td>
                    <td>
                        <t t-set="user_avatar" t-value="activity.user_id" />
                        <t
                            t-call="mail_qweb.view_email_template_part_user_avatar_inline"
                        />
                    </td>
                </tr>
                <tr t-if="activity.res_name">
                    <td class="row_header">
                        On
                    </td>
                    <td>
                        <span t-field="activity.res_name" />
                    </td>
                </tr>
                <tr t-if="activity.summary">
                    <td class="row_header">
                        Summary
                    </td>
                    <td>
                        <span t-field="activity.summary" />
                    </td>
                </tr>
                <tr t-if="activity.date_deadline">
                    <td class="row_header">
                        To close for
                    </td>
                    <td>
                        <span t-field="activity.date_deadline" />
                    </td>
                </tr>
                <tr t-if="env and env.user">
                    <td class="row_header">
                        Closed by
                    </td>
                    <td>
                        <t t-set="user_avatar" t-value="env.user" />
                        <t
                            t-call="mail_qweb.view_email_template_part_user_avatar_inline"
                        />
                    </td>
                </tr>
                <tr
                    t-if="activity.note and activity.note != '&lt;p&gt;&lt;br&gt;&lt;/p&gt;'"
                >
                    <td class="row_header">
                        Note
                    </td>
                    <td>
                        <span t-field="activity.note" />
                    </td>
                </tr>
            </table>

        </div>
    </template>
    <template id="mail.message_activity_done">
        <t t-call="mail_qweb.message_activity_done"/>
    </template>

    <!-- Mail gateway templates (refusing catchall@ and bounce@) -->
    <template id="mail_qweb.mail_bounce_catchall">
        <t t-call="mail_qweb.view_email_template_notification">
            <t t-set="content_message">
                <p>Hello <i t-esc="message['email_from']" />,</p>
                <p>The email sent to <t
                        t-esc="message['to']"
                    /> cannot be processed. This address is exclusively used to collect replies and should not be used to directly contact <b
                        t-esc="res_company.name"
                    />.
                </p>
                <p>Please contact us using <a
                        t-att-href="'mailto:%s' % res_company.email"
                    ><t t-esc="res_company.email" /></a>
                </p>
                <blockquote><t t-raw="message['body']" /></blockquote>
            </t>
        </t>
    </template>
    <template id="mail.mail_bounce_catchall">
        <t t-call="mail_qweb.mail_bounce_catchall"/>
    </template>

    <!-- Mail bounce alias mail template. Note that the body is filled by
        `MailAlias::_get_alias_bounced_body_fallback` if no custom message is set in
        field `alias_bounced_content`
    -->
    <template id="mail_qweb.mail_bounce_alias_security">
        <t t-call="mail_qweb.view_email_template_notification">
            <t t-set="content_message">
                <t t-raw="body" />
                <blockquote><t t-raw="message['body']" /></blockquote>
            </t>
        </t>
    </template>
    <template id="mail.mail_bounce_alias_security">
        <t t-call="mail_qweb.mail_bounce_alias_security"/>
    </template>

</odoo>
