<?xml version="1.0" ?>
<odoo>

    <record model="ir.ui.view" id="res_partner_training_tree_view">
        <field name="name">res.partner.training.tree@partner_training</field>
        <field name="model">res.partner.training</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field
                    name="specialty_ids"
                    string="Specialties or Sectors"
                    widget="many2many_tags"
                />
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="res_partner_training_form_view">
        <field name="name">res.partner.training.form@partner_training</field>
        <field name="model">res.partner.training</field>
        <field name="arch" type="xml">
            <form string="Educational Training">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <field name="active" invisible="1" />
                        <widget
                            name="web_ribbon"
                            title="Archived"
                            bg_color="bg-danger"
                            attrs="{'invisible': [('active', '=', True)]}"
                        />
                    </div>
                    <group name="title">
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only" />
                            <h1>
                                <field name="name" />
                            </h1>
                        </div>
                    </group>
                    <group name="main">
                        <label for="title" class="oe_edit_only" />
                        <field name="title" />
                        <field name="specialty_ids">
                            <tree editable="bottom">
                                <field
                                    name="name"
                                    placeholder="Personal Care and Services Support"
                                />
                                <field name="acronym" placeholder="PCSS" />
                            </tree>
                        </field>
                        <group name="primary">
                        </group>
                        <group name="secondary">
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="res_partner_training_action">
        <field name="name">Educational Trainings</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.partner.training</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new Educational Training
            </p>
            <p>
                Manage educational trainings to better classify orders for tracking and analysis purposes.
            </p>
        </field>
    </record>


</odoo>
