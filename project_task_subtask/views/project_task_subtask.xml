<odoo>

    <record model="ir.ui.view" id="project_task_subtask_form_view">
        <field name="name">project.task.subtask.form@project_task_subtask</field>
        <field name="model">project.task.subtask</field>
        <field name="arch" type="xml">
            <form string="Subtask Message">
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="user_id" />
                        <field name="state" />
                        <field name="task_id" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="project_task_subtask_search_view">
        <field name="name">project.task.subtask.filter@project_task_subtask</field>
        <field name="model">project.task.subtask</field>
        <field name="arch" type="xml">
            <search string="Filter">
                <field name="name" string="Description" />
                <filter
                    string="My"
                    domain="[('user_id','=',uid)]"
                    name="filter_my_subtask"
                />
                <separator />
                <filter
                    string="TODO"
                    domain="[('state','=','todo')]"
                    name="filter_done_subtask"
                />
                <group expand="0" string="Group By">
                    <filter
                        string="Project"
                        name="filter_project"
                        context="{'group_by':'project_id'}"
                    />
                    <filter
                        string="Task"
                        name="filter_task"
                        context="{'group_by':'task_id'}"
                    />
                    <filter
                        string="User"
                        name="filter_user"
                        context="{'group_by':'user_id'}"
                    />
                </group>
            </search>
        </field>
    </record>

    <record model="ir.ui.view" id="project_task_subtask_tree_view">
        <field name="name">project.task.subtask.tree@project_task_subtask</field>
        <field name="model">project.task.subtask</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="user_id" />
                <field name="reviewer_id" />
                <field name="task_id" />
                <field name="task_state" />
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_view_subtask">
        <field name="name">Checklist</field>
        <field name="res_model">project.task.subtask</field>
        <field name="view_mode">tree,form</field>
        <field name="context">
            {
                'search_default_my_subtask': 1,
                'search_default_done_subtask': 1,
            }
        </field>
    </record>

</odoo>
