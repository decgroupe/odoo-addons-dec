<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record model="ir.ui.view" id="attachment_sharing_tree_view">
        <field name="name">ir.attachment.sharing</field>
        <field name="model">ir.attachment</field>
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <tree string="Attachments" create="false" delete="false">
                <field name="name" />
                <field name="file_size" />
                <field name="create_date" />
                <button
                    name="action_generate_sharing_token_from_wizard"
                    string=""
                    type="object"
                    icon="fa-share"
                    attrs="{'invisible': [('sharing_link', '!=', False)]}"
                    context="{'wizard_id':parent.id}"
                >
                </button>
                <field name="sharing_link" widget="CopyClipboardChar" />
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="attachment_sharing_wizard_view">
        <field name="name">Attachment Sharing Wizard</field>
        <field name="model">attachment.sharing</field>
        <field name="arch" type="xml">
            <form string="Attachment Sharing">
                <group>
                    <sheet>
                        <field
                            name="attachment_ids"
                            context="{'tree_view_ref':'mail_attachment_share.attachment_sharing_tree_view'}"
                            options="{'no_create_edit': True, 'no_quick_create': True}"
                        />
                    </sheet>
                </group>
                <footer>
                    <button string="Close" class="oe_highlight" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_attachment_sharing">
        <field name="name">Attachment Sharing Wizard</field>
        <field name="res_model">attachment.sharing</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="attachment_sharing_wizard_view" />
        <field name="target">new</field>
    </record>

</odoo>
