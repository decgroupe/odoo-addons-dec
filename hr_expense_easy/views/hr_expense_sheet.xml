<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record model="ir.ui.view" id="hr_expense_sheet_form_view">
        <field name="name">hr.expense.sheet.form@hr_expense_easy</field>
        <field name="model">hr.expense.sheet</field>
        <field name="inherit_id" ref="hr_expense.view_hr_expense_sheet_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='expense_line_ids']" position="attributes">
                <attribute name="widget" remove="many2many" />
                <attribute
                    name="context"
                    operation="python_dict"
                    key="default_employee_id"
                >employee_id</attribute>
            </xpath>
            <xpath expr="//field[@name='expense_line_ids']/tree" position="attributes">
                <attribute name="editable">bottom</attribute>
            </xpath>
            <xpath
                expr="//field[@name='expense_line_ids']/tree/field[@name='state']"
                position="after"
            >
                <field name="sheet_id" invisible="1" />
                <field name="employee_id" invisible="1" />
            </xpath>
            <xpath
                expr="//field[@name='expense_line_ids']/tree/field[@name='message_unread']"
                position="before"
            >
                <field name="product_id" required="1"/>
                <field name="product_uom_id" optional="hide" />
                <field name="product_uom_category_id" optional="hide" />
                <xpath
                    expr="//field[@name='expense_line_ids']/tree/field[@name='name']"
                    position="move"
                />
                <field name="unit_amount" />
            </xpath>
            <xpath
                expr="//field[@name='expense_line_ids']/tree/field[@name='sale_order_id']"
                position="attributes"
            >
                <attribute name="optional">hide</attribute>
            </xpath>
            <xpath
                expr="//field[@name='expense_line_ids']/tree/field[@name='attachment_number']"
                position="attributes"
            >
                <attribute name="optional">hide</attribute>
            </xpath>
            <xpath
                expr="//field[@name='expense_line_ids']/tree/button[@name='action_get_attachment_view']"
                position="attributes"
            >
                <attribute name="title">View Attachments</attribute>
                <attribute name="string"/>
            </xpath>
            <xpath
                expr="//field[@name='expense_line_ids']/tree/field[@name='unit_amount']"
                position="attributes"
            >
                <attribute name="string">Amount (Tax incl.)</attribute>
            </xpath>
            <xpath
                expr="//field[@name='expense_line_ids']/tree/field[@name='tax_ids']"
                position="after"
            >
                <field name="tax_amount" string="VAT" /> 
            </xpath>
            <xpath
                expr="//field[@name='expense_line_ids']/tree/field[@name='tax_ids']"
                position="attributes"
            >
                <attribute name="optional">hide</attribute>
            </xpath>
            <xpath
                expr="//field[@name='expense_line_ids']/tree/field[@name='total_amount']"
                position="after"
            >
                <field name="comments" /> 
                <button
                    name="action_duplicate"
                    title="Duplicate"
                    type="object"
                    icon="fa-copy"
                    attrs="{'invisible': [('state', 'in', ('done', 'approved'))]}"
                >
                </button>
            </xpath>
        </field>
    </record>

</odoo>
