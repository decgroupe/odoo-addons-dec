<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record model="ir.ui.view" id="hr_timesheet_line_calendar">
        <field name="name">account.analytic.line.calendar@hr_timesheet_calendar</field>
        <field name="model">account.analytic.line</field>
        <field name="arch" type="xml">
            <calendar
                string="Timesheet"
                quick_add="False"
                date_start="date_time"
                date_delay="unit_amount"
                color="project_id"
                event_open_popup="true"
                form_view_id="%(hr_timesheet_autofill.hr_timesheet_line_form_view)s"
            >
                    <!-- Note: 'invisible' as attrs is broken since calendar view does not call _registerModifiers -->
                    <field name="project_id" filters="1" />
                    <field name="task_id" />
                    <field name="calendar_name" />
            </calendar>
        </field>
    </record>

    <record model="ir.actions.act_window.view" id="act_hr_timesheet_line_view_calendar">
        <field name="view_mode">calendar</field>
        <field name="sequence">3</field>
        <field name="view_id" ref="hr_timesheet_line_calendar" />
        <field name="act_window_id" ref="hr_timesheet.act_hr_timesheet_line" />
    </record>

    <record id="hr_timesheet.act_hr_timesheet_line" model="ir.actions.act_window">
        <field name="view_id" ref="hr_timesheet.hr_timesheet_line_form" />
        <field
            name="domain"
        >[('employee_id', '!=', False), ('user_id', '=', uid)]</field>
    </record>

    <record model="ir.ui.view" id="hr_timesheet_line_calendar_all">
        <field name="name">account.analytic.line.calendar.all@hr_timesheet_calendar</field>
        <field name="model">account.analytic.line</field>
        <field name="arch" type="xml">
            <calendar
                string="Timesheet"
                quick_add="False"
                date_start="date_time"
                date_delay="unit_amount"
                color="user_id"
                event_open_popup="true"
                form_view_id="%(hr_timesheet_autofill.hr_timesheet_line_form_view)s"
            >
                    <field name="user_id" filters="1" card_invisible="1" />
                    <field name="project_id" />
                    <field name="calendar_name" />
                    <field name="task_id" />
            </calendar>
        </field>
    </record>

    <record
        id="act_hr_timesheet_line_view_all_calendar"
        model="ir.actions.act_window.view"
    >
        <field name="view_mode">calendar</field>
        <field name="sequence">5</field>
        <field name="view_id" ref="hr_timesheet_calendar.hr_timesheet_line_calendar_all" />
        <field name="act_window_id" ref="hr_timesheet.timesheet_action_all" />
    </record>

    <record id="hr_timesheet.timesheet_action_all" model="ir.actions.act_window">
        <field
            name="domain"
        >[('employee_id', '!=', False), ('employee_id.active', '=', True)]</field>
        <field name="domain">[]</field>
    </record>

</odoo>
