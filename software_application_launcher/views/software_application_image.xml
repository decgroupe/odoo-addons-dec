<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model="ir.ui.view" id="software_application_image_form_view">
        <field name="name">software.application.image.form</field>
        <field name="model">software.application.image</field>
        <field name="arch" type="xml">
            <form string="Application Images">
                <div class="row o_website_sale_image_modal">
                    <div class="col-md-6 col-xl-5">
                        <div class="oe_title">
                            <label class="small text-muted" for="name" string="Image Name"/>
                            <h2>
                                <field name="name" placeholder="Image Name" required="True"/>
                            </h2>
                            <field name="application_id" invisible="1"/>
                            <group>
                                <field name="resize_x"/>
                                <field name="resize_y"/>
                            </group>
                        </div>
                    </div>
                    <div class="col-md-6 col-xl-7 text-center o_website_sale_image_modal_container">
                        <field name="resized_image" widget="image"/>
                        <field name="image" widget="image" groups="base.group_no_one"/>
                    </div>
                </div>
            </form>
        </field>
    </record>

</odoo>
