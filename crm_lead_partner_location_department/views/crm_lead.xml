<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record model="ir.ui.view" id="crm_case_opportunities_filter_view">
        <field
            name="name"
        >crm.lead.search.opportunity@crm_lead_partner_location_department</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.view_crm_case_opportunities_filter" />
        <field name="arch" type="xml">
            <field name="partner_shipping_zip_id" position="after">
                <field name="partner_shipping_department_id" />
                <field name="partner_shipping_state_id" />
            </field>
            <filter name="group_partner_shipping_zip" position="after">
                <filter
                    string="Department"
                    name="group_partner_shipping_department"
                    context="{'group_by':'partner_shipping_department_id'}"
                />
                <filter
                    string="State"
                    name="group_partner_shipping_state"
                    context="{'group_by':'partner_shipping_state_id'}"
                />
            </filter>
        </field>
    </record>

</odoo>
