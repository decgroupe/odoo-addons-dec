<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>

		<record id="tags_form" model="ir.ui.view">
			<field name="name">tagging.product.tags.form</field>
			<field name="model">tagging.tags</field>
			<field name="type">form</field>
			<field name="inherit_id" ref="dec_tagging.tags_form" />
			<field name="arch" type="xml">
				<notebook colspan="4" position="inside">
					<page string="Products">
						<field name="product_ids" colspan="4" nolabel="1" />
					</page>
				</notebook>
			</field>
		</record>

		<record id="view_order_form" model="ir.ui.view">
			<field name="name">tagging.product.form</field>
			<field name="model">product.product</field>
			<field name="type">form</field>
			<field name="inherit_id" ref="product.product_normal_form_view" />
			<field name="arch" type="xml">
				<notebook colspan="4" position="inside">
					<page string="Tags">
						<field name="tagging_ids" colspan="4" nolabel="1" />
					</page>
				</notebook>
			</field>
		</record>

	</data>
</openerp>
