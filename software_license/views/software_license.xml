<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record model="ir.ui.view" id="software_license_tree_view">
        <field name="name">software.license.tree@software_license</field>
        <field name="model">software.license</field>
        <field name="arch" type="xml">
            <tree>
                <field name="application_id" decoration-bf="1" />
                <field name="serial" class="d_software_license_serial" />
                <field name="product_id" optional="show" />
                <field name="partner_id" widget="many2one_avatar" />
                <field name="hardware_count" optional="hide" />
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="software_license_form_view">
        <field name="name">software.license.form@software_license</field>
        <field name="model">software.license</field>
        <field name="arch" type="xml">
            <form string="License">
                <header>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <field name="active" invisible="1" />
                        <widget
                            name="web_ribbon"
                            title="Archived"
                            bg_color="bg-danger"
                            attrs="{'invisible': [('active', '=', True)]}"
                        />
                        <button
                            class="oe_stat_button"
                            name="action_view_hardwares"
                            type="object"
                            widget="statinfo"
                            icon="fa-bars"
                            attrs="{'invisible': [('hardware_count', '=', 0)]}"
                        >
                            <div class="o_form_field o_stat_info">
                                <span class="o_stat_value">
                                    <field name="hardware_count" />
                                </span>
                                <span class="o_stat_text">Hardwares</span>
                            </div>
                        </button>
                    </div>
                    <div class="oe_title">
                        <label for="serial" class="oe_edit_only" />
                        <h1>
                            <field name="serial" />
                        </h1>
                    </div>
                    <group name="main">
                        <group name="primary">
                            <field name="application_id" />
                            <field name="type" groups="base.group_no_one" />
                        </group>
                        <group
                            name="secondary"
                            attrs="{'invisible': [('type', '!=', 'standard')]}"
                        >
                            <field name="product_id" />
                            <field name="partner_id" />
                        </group>
                    </group>
                    <group
                        name="hardware"
                        attrs="{'invisible': [('type', '!=', 'standard')]}"
                    >
                        <field name="hardware_ids" />
                    </group>
                    <group
                        name="info"
                        attrs="{'invisible': [('type', '!=', 'standard')]}"
                    >
                        <field name="info" />
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field
                        name="message_follower_ids"
                        widget="mail_followers"
                        groups="base.group_user"
                    />
                    <field name="activity_ids" widget="mail_activity" />
                    <field name="message_ids" widget="mail_thread" />
                </div>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="software_license_search_view">
        <field name="name">software.license.search@software_license</field>
        <field name="model">software.license</field>
        <field name="arch" type="xml">
            <search string="License">
                <filter
                    name="inactive"
                    string="Archived"
                    domain="[('active','=',False)]"
                />
                <separator />
                <filter
                    name="filter_inhouse"
                    string="In-House"
                    domain="[('application_id.type','=','inhouse')]"
                />
                <filter
                    name="filter_other"
                    string="Other"
                    domain="[('application_id.type','=','other')]"
                />
                <field name="partner_id" />
                <field name="serial" filter_domain="" />
                <field name="application_id" />
                <group string="Group By" name="groupby">
                    <filter
                        string="Application"
                        name="groupby_application_id"
                        context="{'group_by':'application_id'}"
                    />
                    <filter
                        string="Partner"
                        name="groupby_partner_id"
                        context="{'group_by':'partner_id'}"
                    />
                    <filter
                        string="Product"
                        name="groupby_product_id"
                        context="{'group_by':'product_id'}"
                    />
                </group>
            </search>
        </field>
    </record>

    <record model="ir.actions.act_window" id="act_window_software_license">
        <field name="name">Licenses</field>
        <field name="res_model">software.license</field>
        <field name="view_mode">form,tree</field>
        <field name="view_id" ref="software_license_tree_view" />
        <field name="search_view_id" ref="software_license_search_view" />
        <field name="domain">[('type', '=', 'standard')]</field>
        <field name="context">{'default_type': 'standard'}</field>
    </record>

    <record
        model="ir.actions.act_window.view"
        id="act_window_view_software_license_tree"
    >
        <field name="sequence" eval="1" />
        <field name="view_mode">tree</field>
        <field name="view_id" ref="software_license_tree_view" />
        <field name="act_window_id" ref="act_window_software_license" />
    </record>

    <record
        model="ir.actions.act_window.view"
        id="act_window_view_software_license_form"
    >
        <field name="sequence" eval="2" />
        <field name="view_mode">form</field>
        <field name="view_id" ref="software_license_form_view" />
        <field name="act_window_id" ref="act_window_software_license" />
    </record>

    <record model="ir.actions.act_window" id="act_window_software_license_template">
        <field name="name">License Templates</field>
        <field name="res_model">software.license</field>
        <field name="view_mode">form,tree</field>
        <field name="view_id" ref="software_license_tree_view" />
        <field name="search_view_id" ref="software_license_search_view" />
        <field name="domain">[('type', '=', 'template')]</field>
        <field name="context">{'default_type': 'template'}</field>
    </record>

    <record
        model="ir.actions.act_window.view"
        id="act_window_view_software_license_template_tree"
    >
        <field name="sequence" eval="1" />
        <field name="view_mode">tree</field>
        <field name="view_id" ref="software_license_tree_view" />
        <field name="act_window_id" ref="act_window_software_license_template" />
    </record>

    <record
        model="ir.actions.act_window.view"
        id="act_window_view_software_license_template_form"
    >
        <field name="sequence" eval="2" />
        <field name="view_mode">form</field>
        <field name="view_id" ref="software_license_form_view" />
        <field name="act_window_id" ref="act_window_software_license_template" />
    </record>

</odoo>
