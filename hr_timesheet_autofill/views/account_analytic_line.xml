<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <!-- Rewrite of `hr_timesheet.hr_timesheet_line_form` -->
    <record model="ir.ui.view" id="hr_timesheet_line_form_view">
        <field name="name">account.analytic.line.form@hr_timesheet_autofill</field>
        <field name="model">account.analytic.line</field>
        <field name="priority">1000</field>
        <field name="mode">primary</field>
        <field name="inherit_id" eval="False" />
        <field name="arch" type="xml">
            <form string="Analytic Entry">
                <sheet string="Analytic Entry">
                    <div
                        class="d_autofill"
                        name="autofill"
                        attrs="{'invisible': [('id', '!=', False)]}"
                    >
                        <group>
                            <field
                                name="autofill_from_analytic_line_id"
                                options="{
                                    'no_create_edit': True,
                                    'no_quick_create': True,
                                    'no_open': True,
                                    'no_create': True,
                                }"
                                domain="[('user_id','=',uid)]"
                                context="{
                                    'autofill_search_order': 'create_date desc',
                                    'autofill_name_search': True,
                                }"
                            />
                        </group>
                    </div>
                    <div class="oe_title">
                        <label class="oe_edit_only" for="name" />
                        <h1>
                            <field name="name" widget="text" />
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="date" invisible="1" widget="date" />
                            <field name="date_time" string="Date" required="1" />
                            <field
                                name="project_id"
                                required="1"
                                context="{'form_view_ref': 'project.project_project_view_form_simplified',}"
                            />
                            <field
                                name="company_id"
                                groups="base.group_multi_company"
                            />
                        </group>
                        <group>
                            <field name="amount" />
                            <field
                                name="unit_amount"
                                widget="timesheet_uom"
                                decoration-danger="unit_amount &gt; 24"
                            />
                            <field name="currency_id" invisible="1" />
                        </group>
                    </group>
                    <group name="subgroup">
                        <group name="subgroup_details" colspan="4">
                            <field
                                name="task_id"
                                widget="task_with_hours"
                                context="{'default_project_id': project_id}"
                                domain="[('project_id', '=', project_id)]"
                            />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
