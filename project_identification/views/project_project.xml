<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record model="ir.ui.view" id="project_project_filter_view">
        <field name="name">project.project.select@project_identification</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.view_project_project_filter" />
        <field name="arch" type="xml">
            <xpath
                expr="//filter[@name='followed_by_me']/following-sibling::separator"
                position="after"
            >
                <filter
                    string="Is a Contract"
                    name="is_contract"
                    domain="[('is_contract', '=', True)]"
                />
                <filter
                    string="Is not a Contract"
                    name="is_not_contract"
                    domain="[('is_contract', '=', False)]"
                />
                <filter
                    string="For Time-Tracking"
                    name="is_time_tracking"
                    domain="[('is_time_tracking', '=', True)]"
                />
                <separator />
            </xpath>
        </field>
    </record>

    <record model="ir.actions.act_window" id="open_view_contract_all">
        <field name="name">Contracts</field>
        <field name="res_model">project.project</field>
        <field name="domain">[]</field>
        <field
            name="context"
        >{'search_default_is_contract': 1, 'search_default_filter_task_todo': 1}</field>
        <field name="view_mode">kanban,form</field>
        <field name="view_id" ref="project.view_project_kanban" />
        <field name="search_view_id" ref="project.view_project_project_filter" />
        <field name="target">main</field>
    </record>

    <record model="ir.actions.act_window.view" id="open_view_contract_all_kanban">
        <field name="act_window_id" ref="open_view_contract_all" />
        <field name="view_mode">kanban</field>
        <field name="sequence">1</field>
        <field name="view_id" ref="project.view_project_kanban" />
    </record>

    <record model="ir.actions.act_window.view" id="open_view_contract_all_tree">
        <field name="act_window_id" ref="open_view_contract_all" />
        <field name="view_mode">tree</field>
        <field name="sequence">2</field>
        <field name="view_id" ref="project.view_project" />
    </record>

</odoo>
