<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model="ir.ui.view" id="mrp_bom_form_view">
        <field name="name">mrp.bom.form@mrp_buy_consu</field>
        <field name="model">mrp.bom</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="mrp.mrp_bom_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='bom_line_ids']/tree//field[@name='product_uom_id']" position="after">
                <field name="product_is_consumable" invisible="1"/>
                <field name="buy_consumable" attrs="{'invisible': [('product_is_consumable', '!=', True)]}"/>
            </xpath>
        </field>
    </record>

    <record model="ir.ui.view" id="mrp_bom_line_view_form">
        <field name="name">mrp.bom.line.view.form@mrp_buy_consu</field>
        <field name="model">mrp.bom.line</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="mrp.mrp_bom_line_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group//field[@name='product_uom_id']" position="after">
                <field name="buy_consumable"/>
            </xpath>
        </field>
    </record>

</odoo>
