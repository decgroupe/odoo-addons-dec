<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <template id="helpdesk_notify.view_created_ticket_internal_template">
        <t t-call="mail_qweb.view_email_template_notification">
            <t t-set="content_subject">
                <t t-esc="email_subject" />
            </t>
            <t t-set="content_message">
                <div>
                    <p>Hello<t t-if="object.team_id"> team <b
                                t-esc="object.team_id.display_name"
                            /></t>,</p>
                    <p>A new ticket « <t t-esc="object.name" /> » has been created.</p>
                    <t t-if="object.team_id">
                        <p>Someone from your team should assign himself to it.</p>
                    </t>
                    <t t-else="">
                        <p>Please forward this notification to anyone who can handle it.</p>
                    </t>
                </div>
            </t>
            <t t-set="content_message_action">
                <a t-att-href="object.get_access_link()">View Ticket <t
                        t-esc="object.number"
                    /></a>
            </t>
            <t t-set="content_message_bottom">
                Please note that you have not been automatically subscribed.
            </t>
        </t>
    </template>

</odoo>
