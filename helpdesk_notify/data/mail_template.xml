<?xml version='1.0' encoding='utf-8' ?>
<odoo>

    <record id="purchase.email_template_edi_purchase_done" model="mail.template">
        <field name="subject">${object.company_id.name} Order (Ref ${object.name or 'n/a' })</field>
    </record>


    <record id="created_ticket_internal_template" model="mail.template">
        <field name="name">Helpdesk Created Ticket Unassigned Notification Email</field>
        <field name="model_id" ref="helpdesk_mgmt.model_helpdesk_ticket" />
        <field
            name="email_from"
        >${object.team_id.alias_id.display_name or object.company_id.partner_id.email}</field>
        <field name="email_to">${ctx['emails'] or ''|safe}</field>
        <field name="subject">The ticket ${object.number} has been created.</field>
        <field name="auto_delete" eval="True" />
        <field
            name="lang"
        >${object.partner_id.lang or object.company_id.partner_id.lang}</field>
        <field name="body_type">qweb</field>
        <field name="body_view_id" ref="view_created_ticket_internal_template" />
    </record>

</odoo>
