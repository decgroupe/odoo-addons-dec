<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record model="ir.ui.view" id="mrp_production_form_view">
        <field name="name">mrp.production.form@mrp_stock_actions</field>
        <field name="model">mrp.production</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="mrp.mrp_production_form_view" />
        <field name="priority" eval="50" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='move_raw_ids']/tree" position="inside">
                <field name="action_reassign_visible" invisible="1" />
                <button
                    name="action_reassign"
                    title="Unreserve all and re-check availability"
                    type="object"
                    icon="fa-bar-chart-o"
                    attrs="{'invisible': [
                        '|',
                        ('is_locked', '=', True),
                        ('action_reassign_visible', '=', False)
                    ]}"
                >
                </button>
                <field name="action_set_mto_visible" invisible="1" />
                <!-- Note: context overrides `default_state` set from  -->
                <button
                    name="action_set_mto"
                    title="Change procure method to « Make to Order » and make a restock order (buy, manufacture)"
                    type="object"
                    confirm="Are you sure you want to change procure method of this move?"
                    icon="fa-gear"
                    attrs="{'invisible': [
                        '|',
                        ('is_locked', '=', True),
                        ('action_set_mto_visible', '=', False)
                    ]}"
                >
                </button>
                <button
                    name="action_cancel"
                    title="Cancel"
                    type="object"
                    confirm="Are you sure you want to cancel this move?"
                    attrs="{
                        'column_invisible': [
                            ('parent.is_locked', '=', True)
                        ],
                        'invisible': [
                            ('is_cancellable', '=', False)
                        ]}"
                    icon="fa-ban"
                >
                </button>
                <field name="procure_method" invisible="1" />
                <field name="is_cancellable" invisible="1" />
            </xpath>
        </field>
    </record>

</odoo>
