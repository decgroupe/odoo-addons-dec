<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model="ir.ui.view" id="project_project_filter_view">
        <field name="name">project.project.select@project_task_count</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.view_project_project_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='followed_by_me']/following-sibling::separator" position="after">
                <filter string="With Task To-Do" name="task_todo" domain="[('todo_task_count', '>', 0)]"/>
                <separator/>
            </xpath>
        </field>
    </record>

</odoo>
