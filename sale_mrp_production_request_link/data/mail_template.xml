<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="exception_production_request_on_sale_cancellation" name="Message: Alert on production requests when sales orders are cancelled">
        <div>
            <p>
                Exception(s) occurred on the sale order(s):
                <t t-foreach="sale_orders" t-as="sale_order">
                    <a href="#" data-oe-model="sale.order" t-att-data-oe-id="sale_order.id">
                        <t t-esc="sale_order.name"/>
                    </a>
                </t>.
                <br></br>
                Manual actions may be needed.
            </p>
        </div>
    </template>

</odoo>
