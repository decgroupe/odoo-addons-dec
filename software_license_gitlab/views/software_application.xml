<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record model="ir.ui.view" id="software_application_form_view">
        <field name="name">software.application.form@software_license_gitlab</field>
        <field name="model">software.application</field>
        <field
            name="inherit_id"
            ref="software_license.software_application_form_view"
        />
        <field name="arch" type="xml">
            <xpath
                expr="//page[@name='resources']/group[@name='main']"
                position="after"
            >
                <group name="gitlab" string="GitLab">
                    <group name="primary">
                        <field
                            name="documentation_gitlab_resource_id"
                            context="{'default_type': 'project'}"
                        />
                    </group>
                    <group name="secondary">
                    </group>
                </group>
            </xpath>
        </field>
    </record>

</odoo>
