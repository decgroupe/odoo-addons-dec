<?xml version='1.0' encoding='utf-8' ?>
<odoo>

    <record model="ir.ui.view" id="hr_timesheet_line_form_view">
        <field
            name="name"
        >account.analytic.line.form@hr_timesheet_helpdesk_identification</field>
        <field name="model">account.analytic.line</field>
        <field
            name="inherit_id"
            ref="helpdesk_timesheet_ticket_context.hr_timesheet_line_form_view"
        />
        <field name="arch" type="xml">
            <xpath expr="//form/sheet//field[@name='ticket_id']" position="after">
                <field
                    name="ticket_identification"
                    attrs="{'invisible': [('ticket_id', '=', False)]}"
                    string=""
                />
            </xpath>
        </field>
    </record>

</odoo>
