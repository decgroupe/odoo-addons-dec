<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record model="ir.ui.view" id="product_template_only_form_view">
        <field name="name">product.template.form@product_seller</field>
        <field name="model">product.template</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="product.product_template_only_form_view" />
        <field name="arch" type="xml">
            <field name="seller_ids" position="before">
                <group name="main_seller">
                    <field name="main_seller_id" />
                </group>
            </field>
        </field>
    </record>

    <record id="product_template_tree_view" model="ir.ui.view">
        <field name="name">product.template.tree@product_seller</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_tree_view" />
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <field name="uom_id" position="after">
                <field name="main_seller_id" optional="hide" />
            </field>
        </field>
    </record>

</odoo>
