<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <!-- ./addons/sale/views/sale_views.xml -->
    <record model="ir.ui.view" id="sale_order_form_view">
        <field name="name">sale.order.form@sale_traceability</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="arch" type="xml">
            <!-- Dedicated container for traceability -->
            <xpath
                expr="//field[@name='order_line']/form//field[@name='state']"
                position="before"
            >
                <div name="traceability_container">
                </div>
            </xpath>
        </field>
    </record>

</odoo>
