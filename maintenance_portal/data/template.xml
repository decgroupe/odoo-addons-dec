<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <template id="maintenance_portal.request_create">
        <p>Request created from <t t-esc="ip_addr" /></p>
        <p if="user and assigned_reason">
            <t t-esc="user.display_name" /> has been assigned because: <t
                t-esc="assigned_reason"
            />
        </p>
    </template>

    <template id="maintenance_portal.request_update">
        <p>Request updated from <t t-esc="ip_addr" />:</p>
        <ul>
            <t t-foreach="data" t-as="item">
                <li>
                    <t t-esc="item" />: <t t-esc="data[item]" />
                </li>
            </t>
        </ul>
    </template>

    <template id="maintenance_portal.request_ping">
        <p>Request ping from <t t-esc="ip_addr" /></p>
    </template>

</odoo>
