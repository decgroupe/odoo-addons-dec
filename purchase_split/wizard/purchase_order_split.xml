<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record model="ir.ui.view" id="purchase_order_split_form_view">
        <field name="name">purchase.order.split@purchase_split</field>
        <field name="model">purchase.order.split</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Select Options">
                <p class="oe_grey">
                    Select an existing order to merge next lines or let
                    it empty to create a new purchase order.
                </p>
                <group>
                    <field name="partner_id" invisible="1" />
                    <field name="origin_order_id" invisible="1" />
                    <field
                        name="order_id"
                        domain="[
                            ('id', '!=', origin_order_id),
                            ('partner_id', '=', partner_id),
                            ('state', 'in', ['draft', 'sent', 'to approve']),
                        ]"
                        options="{
                            'no_create': True,
                            'no_create_edit': True,
                            'no_quick_create': True,
                        }"
                    />
                    <field name="order_line_ids" />
                </group>
                <footer>
                    <button
                        class="btn-primary"
                        string="Confirm Split"
                        name="action_split"
                        type="object"
                        default_focus="1"
                        context="{}"
                    >
                    </button>
                    <button
                        class="btn-secondary"
                        string="Cancel"
                        special="cancel"
                        context="{}"
                    >
                    </button>
                </footer>
            </form>
        </field>
    </record>

    <record id="act_window_purchase_order_split" model="ir.actions.act_window">
        <field name="name">🧙‍♂️ Split ...</field>
        <field name="binding_model_id" ref="purchase.model_purchase_order_line" />
        <field name="binding_view_types">form</field>
        <field name="res_model">purchase.order.split</field>
        <field name="view_mode">form</field>
        <field name="binding_type">action</field>
        <field name="target">new</field>
    </record>

</odoo>
