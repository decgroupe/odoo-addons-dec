<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record model="ir.ui.view" id="product_template_only_form_view">
        <field name="name">product.template.form@product_pricelist_analysis</field>
        <field name="model">product.template</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="product.product_template_only_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button
                    class="oe_stat_button"
                    name="action_view_pricelist_items"
                    string="Pricelist Items"
                    help="Show pricelist items details"
                    type="object"
                    icon="fa-bars"
                >
                </button>
            </xpath>
        </field>
    </record>

    <record model="ir.ui.view" id="product_normal_form_view">
        <field name="name">product.product.form@product_pricelist_analysis</field>
        <field name="model">product.product</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="product.product_normal_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button
                    class="oe_stat_button"
                    name="action_view_pricelist_items"
                    string="Pricelist Items"
                    help="Show pricelist items details"
                    type="object"
                    icon="fa-bars"
                >
                </button>
            </xpath>
        </field>
    </record>


</odoo>
