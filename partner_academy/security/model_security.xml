<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record model="ir.module.category" id="module_category_partner_academy">
        <field name="name">Academy</field>
        <field name="sequence">90</field>
    </record>

    <record id="group_academy_user" model="res.groups">
        <field name="name">User</field>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        <field name="category_id" ref="partner_academy.module_category_partner_academy"/>
    </record>

    <record id="group_academy_manager" model="res.groups">
        <field name="name">Administrator</field>
        <field name="category_id" ref="partner_academy.module_category_partner_academy"/>
        <field name="implied_ids" eval="[(4, ref('group_academy_user'))]"/>
        <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
    </record>

</odoo>
