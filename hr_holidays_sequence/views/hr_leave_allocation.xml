<?xml version='1.0' encoding='UTF-8' ?>
<odoo>

    <record id="hr_leave_allocation_view_form_manager" model="ir.ui.view">
        <field
            name="name"
        >hr.leave.allocation.view.form.manager@hr_holidays_requestable</field>
        <field name="model">hr.leave.allocation</field>
        <field
            name="inherit_id"
            ref="hr_holidays.hr_leave_allocation_view_form_manager"
        />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='holiday_status_id']" position="attributes">
                <attribute name="domain">[
                    '|',
                    ('valid', '=', True),
                    ('requestable_from_valid', '=', True),
                ]
                </attribute>
            </xpath>
        </field>
    </record>

</odoo>
