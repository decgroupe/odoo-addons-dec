<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record model="ir.ui.view" id="mrp_production_request_form_view">
        <field
            name="name"
        >mrp.production.request.form@mrp_production_request_partner</field>
        <field name="model">mrp.production.request</field>
        <field name="type">form</field>
        <field
            name="inherit_id"
            ref="mrp_production_request.view_mrp_production_request_form"
        />
        <field name="arch" type="xml">
            <field name="sale_order_id" position="after">
                <field name="partner_id" />
                <field name="zip_id" />
            </field>
        </field>
    </record>

    <record model="ir.ui.view" id="mrp_production_request_tree_view">
        <field
            name="name"
        >mrp.production.request.tree@mrp_production_request_partner</field>
        <field name="model">mrp.production.request</field>
        <field
            name="inherit_id"
            ref="mrp_production_request.view_mrp_production_request_tree"
        />
        <field name="arch" type="xml">
            <field name="sale_order_id" position="after">
                <field name="partner_id" />
                <field name="zip_id" />
            </field>
        </field>
    </record>


    <record model="ir.ui.view" id="mrp_production_request_search_view">
        <field
            name="name"
        >mrp.production.request.search@mrp_production_request_partner</field>
        <field name="model">mrp.production.request</field>
        <field
            name="inherit_id"
            ref="mrp_production_request.view_mrp_production_request_search"
        />
        <field name="arch" type="xml">
            <filter name="origin_group_by" position="after">
                <filter
                    string="Partner"
                    name="groupby_partner_id"
                    domain="[]"
                    context="{'group_by':'partner_id'}"
                />
                <filter
                    string="ZIP Location"
                    name="groupby_zip_id"
                    domain="[]"
                    context="{'group_by':'zip_id'}"
                />
            </filter>
        </field>
    </record>

</odoo>
