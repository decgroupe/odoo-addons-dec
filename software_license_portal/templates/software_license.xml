<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <template
        id="software_license_portal.portal_software_license_layout"
        name="Portal layout: license menu entry"
        inherit_id="portal.portal_breadcrumbs"
        priority="50"
    >
        <xpath expr="//ol[hasclass('o_portal_submenu')]" position="inside">
            <li
                t-if="page_name == 'license' or license"
                t-attf-class="breadcrumb-item #{'active ' if not license else ''}"
            >
                <a
                    t-if="license"
                    t-attf-href="/my/licenses?{{ keep_query() }}"
                >Licenses</a>
                <t t-else="">Licenses</t>
            </li>
            <li t-if="license" class="breadcrumb-item active">
                <t t-esc="license.serial" />
            </li>
        </xpath>
    </template>

    <template
        id="software_license_portal.portal_software_license_my_home"
        name="Portal My Home : license entries"
        inherit_id="portal.portal_my_home"
        priority="40"
    >
        <xpath expr="//div[hasclass('o_portal_docs')]" position="inside">
            <t t-if="license_count" t-call="portal.portal_docs_entry">
                <t t-set="title">Licenses</t>
                <t t-set="url" t-value="'/my/licenses'" />
                <t t-set="count" t-value="license_count" />
            </t>
        </xpath>
    </template>

    <template id="software_license_portal.license_row_layout">
        <tr>
            <td>
                <t t-esc="license.sudo().partner_id._get_contact_type_emoji()" />
            </td>
            <td>
                <a t-attf-href="/my/license/#{license.id}">
                    <t t-esc="license.serial" />
                </a>
            </td>
            <td>
                <small>
                    <b>
                        <t t-esc="license.application_id.name" />
                    </b>
                    <t t-esc="license.application_id.info" />
                </small>
            </td>
            <td>
                <span t-field="license.create_date" />
            </td>
            <td>
                <span t-field="license.expiration_date" />
            </td>
        </tr>
    </template>

    <template id="software_license_portal.portal_my_licenses" name="My licenses">
        <t t-call="portal.portal_layout">
            <t t-set="breadcrumbs_searchbar" t-value="True" />
            <t t-call="portal.portal_searchbar">
                    <t t-set="title">Licenses</t>
            </t>
            <t t-if="not licenses">
                    <p>There is no license linked to your account.</p>
            </t>
            <div t-if="licenses" class="panel panel-default">
                <div class="table-responsive">
                    <table
                        name="licenses"
                        class="table table-hover o_portal_my_doc_table"
                    >
                        <thead>
                            <tr class="active">
                                <th>Owner</th>
                                <th>Serial</th>
                                <th>Application</th>
                                <th>Create Date</th>
                                <th>Expiration Date</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="licenses" t-as="license">
                                <t
                                    t-call="software_license_portal.license_row_layout"
                                />
                            </t>
                        </tbody>
                    </table>
                </div>
                <div t-if="pager" class="o_portal_pager text-center">
                    <t t-call="portal.pager" />
                </div>
            </div>
        </t>
    </template>

    <template id="software_license_portal.portal_software_license_page_title">
        <div class="row">
            <div class="col-md-6">
                <h4>
                    <t t-call='portal.record_pager' />
                    <span t-field="license.serial" />
                </h4>
            </div>
        </div>
    </template>

    <template id="software_license_portal.portal_software_license_page_details">
        <div class="row">
            <div class="col-md-6">
                <strong>Application:</strong> <t
                    t-esc="license.application_id.name"
                /> <t t-esc="license.application_id.info" /><br />
                <strong>Create Date:</strong> <span t-field="license.create_date" /><br
                />
            </div>
            <div class="col-md-6">
                <t t-if="license.expiration_date">
                    <strong>Expiration Date:</strong> <span
                        t-field="license.expiration_date"
                    /><br />
                </t>
                <t t-if="license.max_allowed_hardware">
                    <strong>Maximum Activation Count:</strong> <span
                        t-field="license.max_allowed_hardware"
                    /><br />
                </t>
                <t t-if="license.max_allowed_hardware > 0">
                    <strong>Remaining Activations:</strong> <span
                        t-esc="license.get_remaining_activation()"
                    /><br />
                </t>
            </div>
            <div class="col-md-6">
            </div>
        </div>
    </template>

    <template
        id="software_license_portal.portal_software_license_page_hardware_identifiers"
    >
        <div class="row mt8">
            <div class="col-md-12">
                <h4 class="page-header">Hardware Identifiers</h4>
                <div class="table-responsive">
                    <table
                        name="hardware_identifiers"
                        class="table table-hover o_portal_my_doc_table"
                    >
                        <thead>
                            <tr class="active">
                                <th>Unique ID</th>
                                <th>Last activation</th>
                                <th>Action</th>
                                <th>Informations</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="license.hardware_ids" t-as="hardware_id">
                                <t
                                    t-call="software_license_portal.portal_software_license_page_hardware_identifier_row_layout"
                                />
                            </t>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </template>

    <template
        id="software_license_portal.portal_software_license_page_hardware_identifier_row_layout"
    >
        <tr>
            <td>
                <span t-esc="hardware_id.name" />
            </td>
            <td>
                <span t-field="hardware_id.validation_date" />
            </td>
            <td>
                <form
                    method="POST"
                    t-if="True"
                    t-attf-action="/my/license/deactivate"
                    style="display:inline;"
                >
                    <input
                        type="hidden"
                        name="csrf_token"
                        t-att-value="request.csrf_token()"
                    />
                    <input
                        type="hidden"
                        name="hardware_id"
                        t-attf-value="#{hardware_id.id}"
                    />
                    <input
                        type="hidden"
                        name="license_id"
                        t-attf-value="#{license.id}"
                    />
                    <button
                        class="btn btn-success"
                        style="margin-right:15px;margin-top:3px;"
                    >
                        Deactivate
                    </button>
                </form>
            </td>
            <td style="font-size: x-small;font-family: monospace;">
                <span t-esc="hardware_id.info" />
            </td>
        </tr>
    </template>

    <template
        id="software_license_portal.portal_software_license_page"
        name="License Portal Template"
    >
        <t t-call="portal.portal_layout">
            <div class="container">
                <div class="panel panel-default">
                    <div class="panel-heading mt32">
                        <t
                            t-call="software_license_portal.portal_software_license_page_title"
                        />
                    </div>

                    <div class="panel-body">
                        <div class="mb8">
                            <t
                                t-call="software_license_portal.portal_software_license_page_details"
                            />
                            <t t-if="license.hardware_ids">
                                <t
                                    t-call="software_license_portal.portal_software_license_page_hardware_identifiers"
                                />
                            </t>
                            <t t-else="">
                                <div
                                    class="alert alert-warning text-center mt-4"
                                >There is no activated hardware on this license.</div>
                            </t>
                        </div>
                    </div>
                </div>
            </div>
            <div class="oe_structure mb32" />
        </t>
    </template>

</odoo>
