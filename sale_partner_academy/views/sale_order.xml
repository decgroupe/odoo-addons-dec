    <record model="ir.ui.view" id="sales_order_filter_view">
        <field name="name">sale.order.list.select@sale_partner_academy</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_sales_order_filter" />
        <field name="arch" type="xml">
            <field name="partner_id" position="after">
                <field name="partner_shipping_academy_id" />
            </field>
            <xpath expr="//filter[@name='customer']" position="after">
                <filter
                    string="Shipping Partner's Academy"
                    name="group_ship_partner_academy"
                    context="{'group_by':'partner_shipping_academy_id'}"
                />
            </xpath>
        </field>
    </record>

