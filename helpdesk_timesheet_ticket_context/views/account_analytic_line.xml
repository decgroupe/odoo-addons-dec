<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record model="ir.ui.view" id="hr_timesheet_line_form">
        <field name="name">account.analytic.line.form@helpdesk_timesheet_ticket_context</field>
        <field name="model">account.analytic.line</field>
        <field name="inherit_id" ref="helpdesk_mgmt_timesheet.hr_timesheet_line_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form/sheet//field[@name='ticket_id']" position="attributes">
                <attribute name="context">
                {
                    'default_project_id': project_id,
                    'default_description': name,
                }
                </attribute>
            </xpath>
            <xpath expr="//form/sheet//field[@name='ticket_partner_id']" position="attributes">
                <attribute name="string"> </attribute>
                <attribute name="attrs">
                {
                    'invisible': [
                        ('|'),
                        ('ticket_id', '=', False),
                        ('ticket_partner_id', '=', False),
                    ]
                }
                </attribute>
            </xpath>
        </field>
    </record>

</odoo>