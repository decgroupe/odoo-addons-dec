<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record model="ir.ui.view" id="sale_order_form_view_inherit_sale_stock2">
        <field name="name">sale.order.form@sale_delivery_last_date</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale_stock.view_order_form_inherit_sale_stock" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='effective_date']" position="before">
                <field
                    name="expected_last_date"
                    attrs="{'invisible': [('picking_policy', '=', 'one')]}"
                    widget="date"
                />
            </xpath>
            <xpath expr="//field[@name='effective_date']" position="after">
                <field name="effective_last_date" />
            </xpath>
        </field>
    </record>

</odoo>
