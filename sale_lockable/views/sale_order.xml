<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record model="ir.ui.view" id="sale_order_form_view">
        <field name="name">sale.order.form@sale_lockable</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="arch" type="xml">
            <xpath expr="//header" position="after">
                <div
                    class="alert alert-warning"
                    role="alert"
                    style="height: 40px; margin-bottom:0px;"
                    attrs="{'invisible':
                    [
                        ('|'),
                        ('state', '!=', 'draft'),
                        ('&amp;'),
                            ('state', '=', 'draft'),
                            ('locked_draft', '=', False),
                    ]}"
                >
                    This sale order is currently <strong>locked</strong> by its owner.
                </div>
            </xpath>
            <xpath expr="//button[@name='action_cancel']" position="before">
                <button
                    name="action_draft_lock"
                    type="object"
                    attrs="{'invisible':
                        [
                            ('|'),
                                ('state', '!=', 'draft'),
                                ('&amp;'),
                                    ('state', '=', 'draft'),
                                    ('locked_draft', '=', True),
                        ]}"
                    string="Lock Changes"
                >
                </button>
                <button
                    name="action_draft_unlock"
                    type="object"
                    disabled="[('same_user', '=', False)]"
                    attrs="{'invisible':
                        [
                            ('|'),
                            ('state', '!=', 'draft'),
                            ('&amp;'),
                                ('state', '=', 'draft'),
                                ('locked_draft', '=', False),
                        ]}"
                    class="btn btn-warning"
                    string="Allow Changes"
                >
                </button>
            </xpath>
            <xpath expr="//field[@name='validity_date']" position="before">
                <field name="locked_draft" invisible="1" />
                <field name="same_user" invisible="1" />
            </xpath>
        </field>
    </record>

</odoo>
