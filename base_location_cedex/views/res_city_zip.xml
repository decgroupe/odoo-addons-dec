<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record model="ir.ui.view" id="city_zip_form_view">
        <field name="name">res.city.zip.form@base_location_cedex</field>
        <field name="model">res.city.zip</field>
        <field name="inherit_id" ref="base_location.city_zip_form" />
        <field name="arch" type="xml">
            <field name="city_id" position="after">
                <field name="cedex" />
            </field>
        </field>
    </record>

    <record model="ir.ui.view" id="city_zip_tree_view">
        <field name="name">res.city.zip.tree@base_location_cedex</field>
        <field name="model">res.city.zip</field>
        <field name="inherit_id" ref="base_location.city_zip_tree" />
        <field name="arch" type="xml">
            <field name="city_id" position="after">
                <field name="cedex" />
            </field>
        </field>
    </record>

    <record model="ir.ui.view" id="city_zip_filter_view">
        <field name="name">res.city.zip.select@base_location_cedex</field>
        <field name="model">res.city.zip</field>
        <field name="inherit_id" ref="base_location.view_city_zip_filter" />
        <field name="arch" type="xml">
            <field name="city_id" position="after">
                <field name="cedex" />
            </field>
        </field>
    </record>

</odoo>
