<?xml version="1.0" ?>
<odoo>

    <record model="ir.ui.view" id="mail_activity_view_gantt">
        <field
            name="name"
        >mail.activity.view.gantt@mail_activity_schedule_dhxgantt</field>
        <field name="model">mail.activity</field>
        <field name="type">dhxgantt</field>
        <field name="arch" type="xml">
            <dhxgantt
                js_class="mail_activity_gantt"
                drag_progress="false"
                default_group_by="res_model_id"
                column_title="summary"
                task_text_leftside="res_name"
                task_text="note"
                task_text_rightside="gantt_assigned_resource"
                date_start="date_start"
                date_stop="date_stop"
                date_deadline="date_deadline"
                duration="duration"
                color="user_id"
                css_class="gantt_class"
                assigned_resource="gantt_assigned_resource"
            >
                <field name="user_id" />
                <field name="res_id" />
                <field name="res_name" />
                <field name="res_model" />
                <field name="state" />
                <field name="icon" />
                <field name="activity_type_id" />
                <field name="activity_category" />
                <!-- <field name="partner_id"/> -->
                <!-- TODO: use the calendar_event_id as a hook for date_start and date_stop -->
                <field name="calendar_event_id_start" />
            </dhxgantt>
        </field>
    </record>

    <!-- Note that we set a sequence fo this view but original `open_boards_activities`
            action does not set them (and the default is null < 0)  -->
    <record id="action_open_boards_activities_gantt" model="ir.actions.act_window.view">
        <field eval="10" name="sequence" />
        <field name="view_mode">dhxgantt</field>
        <field
            name="view_id"
            ref="mail_activity_schedule_dhxgantt.mail_activity_view_gantt"
        />
        <field name="act_window_id" ref="mail_activity_board.open_boards_activities" />
    </record>

</odoo>
