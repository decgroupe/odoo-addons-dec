<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record model="ir.ui.view" id="view_account_invoice_filter">
        <field name="name">account.invoice.select@account_partner_academy</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_account_invoice_filter" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="partner_academy_id" />
            </xpath>
            <xpath expr="//filter[@name='status']" position="after">
                <filter
                    string="Partner"
                    name="group_partner"
                    domain="[]"
                    context="{'group_by':'partner_id'}"
                />
                <filter
                    string="Academy"
                    name="group_partner_academy"
                    domain="[]"
                    context="{'group_by':'partner_academy_id'}"
                />
            </xpath>
        </field>
    </record>

</odoo>
