<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record model="ir.actions.act_window" id="base.open_module_tree">
        <field name="view_mode">tree,kanban,form</field>
        <field name="context">{}</field>
    </record>

    <record model="ir.ui.view" id="module_kanban_view">
        <field name="name">Apps Kanban@base_module_search</field>
        <field name="model">ir.module.module</field>
        <field name="inherit_id" ref="base.module_view_kanban" />
        <field name="arch" type="xml">
            <xpath
                expr="//div[@class='oe_module_action']/a[@t-att-href='record.website.raw_value']"
                position="attributes"
            >
                <attribute name="attrs">{'invisible': True}</attribute>
            </xpath>
            <xpath
                expr="//div[@class='oe_module_action']/a[@type='edit']"
                position="attributes"
            >
                <attribute name="attrs">{'invisible': False}</attribute>
            </xpath>
        </field>
    </record>

</odoo>
